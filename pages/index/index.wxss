.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
  
.circle-box {
  text-align: center;
  margin-top: 10vw;
  line-height: 200px;
}
  
.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  
}
  
.draw_btn {
  width: 35vw;
  height: 2rem;
  line-height: 2rem;
  color: white;
  background-color: #b0b000;
  position: absolute;
  bottom: 5rem;
  right: 0;
  box-shadow: 0 0 10px 2px rgba(150, 150, 150, 0.1);
  left: 0;
  margin: auto;
  border: 0px;
  border-radius: 5vw;
}

.title{
  text-align: center;
  color: #525252;
